pipeline{
    agent { label 'JDK8' }
    options { 
        timeout(time: 1, unit: 'HOURS')
        retry(3)
    }
    triggers { 
        cron('0 * * * *') 
    }
    stages {
        stage('source code') {
            steps {
              git url : 'https://github.com/DevopsRazak/demo-counter-app.git',
                branch : 'main'
            }
        }
    
        stage('build the code') {
            steps {
                sh script : 'mvn clean package'
            }
        }
        stage('test results and artifacts') {
            steps {
            junit testResults : 'target/surefire-reports/*.xml'
            archiveArtifacts artifacts: '**/*.jar'
        }
        }
    }
    post {
        success {
           // build is succeded
           echo " success"
           mail bcc: '', body: 'Build is succeeded wow!', cc: 'eerazzaq@gmail.com', from: '', replyTo: '', subject: 'build success', to: 'razzaq307abdul@gmail.com'
        }
        failure {
           // build failed
           echo "failure"
        }
    }
}