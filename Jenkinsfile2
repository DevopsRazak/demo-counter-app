pipeline{
    agent { label 'JDK11' }
    options { 
        timeout(time: 1, unit: 'HOURS')
        retry(3)
    }
    triggers { 
        cron('0 * * * *') 
    }
    stages {
        stage('source code') {
            steps {
                url : https://github.com/DevopsRazak/demo-counter-app.git,
                branch : main
            }
        }
    }
    stages {
        stage('build the code') {
            steps {
                sh 'mvn clean package'
            }
        }
    }
    stages {
        stage ('test results and artifacts') {
            junit testResults : 'target/surefire-reports/*.xml'
            archiveArtifacts artifacts: '**/*.jar'
        }
    }
    post {
        success {
           // build is succeded
           echo " success"
        }
        failure {
           // build failed
           echo "failure"
        }
    }
}