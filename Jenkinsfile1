node('JDK8') {
     stage('sourcecode') {
        // get code from repo
        git branch: 'main', url: 'https://github.com/DevopsRazak/demo-counter-app.git'
    }
     stage('packaging the code') {
         sh 'mvn clean package'
    }  
     stage('archiving test results and artifacts') {
        // publish junit results and artifacts
       junit '/jenkins_root/workspace/project_9/target/surefire-reports/TEST-com.example.springboot.SpringbootApplicationTests.xml '
       junit '/jenkins_root/workspace/project_9/target/springboot-1.0.0.jar'
    }
}